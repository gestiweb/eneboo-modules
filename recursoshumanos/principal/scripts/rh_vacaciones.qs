//// INTERNA /////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////

/** @class_definition oficial */
//////////////////////////////////////////////////////////////////
//// OFICIAL /////////////////////////////////////////////////////

function oficial_bufferChanged(fN)
{
	var util:FLUtil = new FLUtil();
	var cursor:FLSqlCursor = this.cursor();
	switch(fN) {
		case "fechainicio": 
		case "fechafin": 
		case "tipo": { 
			this.child("fdbDias").setValue(this.iface.calculateField("dias"));
			break;
		}
	}
}

